<div class="container-login">
  <h2 class= "login-principal">Iniciar sesion con </h2>

  <div class="links-de-redes">
    <%= link_to '#', class: 'social-link' do %>
      <i class="fa-brands fa-facebook"></i>
        <span>Iniciar sesion con Facebook</span>
    <% end %>
  </div>
  <div class="links-de-redes">
    <%= link_to '#', class: 'social-link' do %>
      <i class="fa-brands fa-google"></i>
        <span>Iniciar sesion con Google</span>
    <% end %>
  </div>
  <div class="links-de-redes">
    <%= link_to '#', class: 'social-link' do %>
      <i class="fa-brands fa-apple"></i>
      <span>Iniciar sesion con Apple</span>
    <% end %>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs login-edit">
        <div class="preguntas">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
        </div>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Iniciar Sesion" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
