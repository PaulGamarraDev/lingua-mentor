  <div class="banner-perfil">
    <% if @user.banner_image.present? %>
      <%= image_tag @user.banner_image, class: "card-img-top", alt: "foto de perfil del estudiante" %>
    <% else %>
      <%= image_tag 'paisaje.avif', class: "card-img-top", alt: "Foto por defecto" %>
    <% end %>
  </div>

  <div class="avatar-perfil">
    <% if @user.profile_photo.present? %>
      <%= image_tag @user.profile_photo, class: "card-img-top", alt: "foto de perfil del estudiante" %>
    <% else %>
      <%= image_tag 'paisaje.avif', class: "card-img-top", alt: "Foto por defecto" %>
    <% end %>
  </div>

  <div class="info-users">
    <h2><%= @user.first_name %> <%= @user.last_name %></h2>
    <% age = (Time.zone.now - @user.date_of_birth.to_time) / 1.year.seconds %>
    <p><%= " #{age.to_i}" %></p>
    
  </div>







