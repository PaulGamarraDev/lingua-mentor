        <%= image_tag @blog.photo_album.second%>
      </div>

      <div class="card-blog">
        <%= image_tag @blog.photo_album.third%>
        <div class="info-blog">
          <h3><%= @blog.third_subtitle %></h3>
          <p><%= @blog.third_paragraph %></p>
        </div>
      </div>

      <div class="card-blog">
        <div class="info-blog">
          <h3><%= @blog.fourth_subtitle %></h3>
          <p><%= @blog.fourth_paragraph %></p>    
        </div>
        <%= image_tag @blog.photo_album.fourth%>
      </div>

      <div class="card-blog">
        <%= image_tag @blog.photo_album.fifth%>
        <div class="info-blog">
          <h3><%= @blog.fifth_subtitle %></h3>
          <p><%= @blog.fifth_paragraph %></p>    
        </div>
      </div>

    </div>
  </div>
</div>