        <h2><%= @blog.title %></h2>
      </div>

      <p><%= @blog.description %></p>

      <div class="card-blog">
        <%= image_tag @blog.photo_album.first%>
        <div class="info-blog">
          <h3><%= @blog.first_subtitle %></h3>
          <p><%= @blog.first_paragraph %></p>    
        </div>
      </div>

      <div class="card-blog">
        <div class="info-blog">
          <h3><%= @blog.second_subtitle %></h3>
          <p><%= @blog.second_paragraph %></p>    
