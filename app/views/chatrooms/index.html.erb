<div class="container" data-controller="chats">
  <div class="styles-header">
    <h5><%= "#{current_user.first_name} #{current_user.last_name}" %></h5>
  </div>

  <div class="row">
    <%# SIDEBAR %>
    <aside class="col-md-2 styles-sidebar">
      <%= render "chatrooms" %>
    </aside>

    <%# SELECTED SECTION FROM THE SIDEBAR %>
    <div class="col-md-10">
      <div class="styles-section" data-chats-target="users">
        <%= render "users/users_chatroom" %>
      </div>
    </div>

  </div>
</div>

<%# raise %>
