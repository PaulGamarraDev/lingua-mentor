<div class="page-content">
  <div class="container" style="max-width: 1440px;">
    <div class="new-container">

      <div class="new-form">
        <div class="forms-title">
          <h2>Nueva reserva</h2>
        </div>
        <%= puts @teacher_name %>
        <%= puts @teacher_language%>
        <%= puts "Hola" %>
        <%= simple_form_for @booking, data: { controller: 'flatpickr' } do |f| %>
          <%= f.input :teacher_name, label: "Profesor", input_html: { value: "#{@teacher_name}", disabled: true }%>
          <%= f.input :teaching_language_session_id, as: :hidden, input_html: { value: params[:teaching_language_session_id] }%>
          <%= f.input :date, label: "Fecha", as: :string, input_html: { data: { flatpickr_target: "dateInput" }, class: "custom-flatpickr-style" } %>
          <%= f.input :time_in, label: "Hora de inicio", as: :string, input_html: { data: { flatpickr_target: "timeInput" }, class: "custom-flatpickr-style" } %>
          <%= f.submit "Crear reserva", class: 'botton-aceptar' %>

        <% end %>
        <%= link_to raw('<i class="fa-solid fa-arrow-left"></i>  Volver atrÃ¡s'), bookings_path %>
      </div>
    </div>
  </div>
</div>

<% content_for :footer do %>
  <%= render 'shared/footer' %>
<% end %>
