<div class="container mt-5">
  <h2 class="card-title">Nueva reserva</h2>
  <br>
  <%= simple_form_for(@booking) do |f| %>
    <%= f.association :teaching_language_session, label: "Idioma", collection: TeachingLanguageSession.all.map{|t| ["#{t.language}-#{t.user.last_name}", t.id]}, prompt: 'Selecciona un idioma' %>
    <%= f.input :time_in, label: "Hora de inicio", as: :time %>
    <%= f.input :date, label: "Fecha", as: :date %>
    <%= f.submit "Crear reserva", class: 'btn btn-primary' %> <%= link_to "Regresar al inicio", bookings_path %>
  <% end %>
</div>
