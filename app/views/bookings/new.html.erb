<div class="forms">
  <h2 class="forms-title">Nueva reserva</h2>
  <br>
  <%= puts @teacher_name %>
  <%= puts "Hola" %>
  <%= simple_form_for @booking, data: { controller: 'flatpickr' } do |f| %>
    <%= f.input :teacher_name, label: "Profesor", input_html: { value: "#{@teacher_name}", disabled: true }%>
    <%= f.input :teaching_language_session_id, as: :hidden, input_html: { value: params[:teaching_language_session_id] }%>
    <%= f.input :time_in, label: "Hora de inicio", as: :string, input_html: { data: { flatpickr_target: "timeInput" } } %>
    <%= f.input :date, label: "Fecha", as: :string, input_html: { data: { flatpickr_target: "dateInput" } } %>
    <%= f.submit "Crear reserva", class: 'btn btn-primary' %> <%= link_to "Regresar al inicio", bookings_path %>
  <% end %>
</div>

